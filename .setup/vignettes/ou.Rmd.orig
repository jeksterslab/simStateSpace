```{r no-error-ou}
#| echo = FALSE
library(simStateSpace)
sim <- SimSSMOUFixed(
  n = 5,
  time = length(seq(from = 0, to = 20, by = delta_t)),
  delta_t = delta_t,
  mu0 = mu0,
  sigma0_l = sigma0_l,
  mu = mu,
  phi = phi,
  sigma_l = matrix(
    data = 0,
    nrow = p,
    ncol = p
  ),
  nu = nu,
  lambda = lambda,
  theta_l = matrix(
    data = 0,
    nrow = k,
    ncol = k
  ),
  type = 0
)
