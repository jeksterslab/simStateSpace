#| echo = FALSE
set.seed(42)
n <- 100
time <- 500
k <- p <- 3
iden <- diag(k)
null_vec <- rep(x = 0, times = k)
alpha <- null_vec
beta <- matrix(
  data = c(
    0.7,
    0.5,
    -0.1,
    0.0,
    0.6,
    0.4,
    0,
    0,
    0.5
  ),
  nrow = k
)
psi <- 0.1 * iden
psi_l <- t(chol(psi))
nu <- null_vec
lambda <- iden
theta <- 0.2 * iden
theta_l <- t(chol(theta))
mu0 <- simStateSpace::SSMMeanEta(
  beta = beta,
  alpha = alpha
)
# mu0 <- null_vec
sigma0 <- simStateSpace::SSMCovEta(
  beta = beta,
  psi = psi
)
